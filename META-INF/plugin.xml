<idea-plugin version="2">
  <id>com.apphacker.awesome.filesearch.plugin</id>
  <name>File Search</name>
  <version>1.0.0</version>
  <vendor email="apphacker@gmail.com" url="https://www.apphacker.com">Apphacker</vendor>

  <description><![CDATA[
     Search for files by name anywhere on your computer.
    ]]></description>

  <change-notes><![CDATA[
      Created the plugin.
    ]]>
  </change-notes>

  <!-- please see https://confluence.jetbrains.com/display/IDEADEV/Build+Number+Ranges for description -->
  <idea-version since-build="139"/>

  <!-- please see https://confluence.jetbrains.com/display/IDEADEV/Plugin+Compatibility+with+IntelliJ+Platform+Products
       on how to target different products -->
  <depends>com.intellij.modules.lang</depends>


  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
  </extensions>

  <application-components>
    <!-- Add your application components here -->
  </application-components>

  <project-components>
    <!-- Add your project components here -->
  </project-components>

  <actions>
    <!-- Add your actions here -->
      <action id="open.filesearch.apphacker.com" class="FileSearch.actions.OpenFileSearch" text="Search for Files"
              description="Search for Files by name or path">
          <add-to-group group-id="ToolsMenu" anchor="last"/>
      </action>
  </actions>

</idea-plugin>